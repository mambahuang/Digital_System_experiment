module Half_adder(In, sum , carry);

input [1:0] In;
output sum, carry;

always @(In)
begin 

	case(In)
		2'b00: 
		begin
			sum = 0;
			carry = 0;
		end
		2'b01:
		begin
			sum = 1;
			carry = 0;
		end
		2'b10:
		begin
			sum = 1;
			carry = 0;
		end
		2'b11:
		begin
			sum = 0;
			carry = 1;
		end
	endcase

end

endmodule
